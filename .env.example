# Azure AI Foundry Configuration
# Copy this file to .env and fill in your values

# Azure AI Project endpoint (from Azure AI Foundry portal)
# Format: https://<resource-name>.services.ai.azure.com/api/projects/<project-name>
AZURE_AI_PROJECT_ENDPOINT=

# Model deployment name (default: gpt-4o)
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o

# Bing connection name (create this in Azure AI Foundry portal)
# This is the NAME of the connection, not the full resource ID
BING_PROJECT_CONNECTION_NAME=

# ============================================================================
# MCP Server Configuration (for Scenario 2: Agent-to-Agent)
# ============================================================================

# MCP Server URL
# Local Docker: http://localhost:8000/mcp
# Azure Functions: https://<function-app>.azurewebsites.net/runtime/webhooks/mcp
MCP_SERVER_URL=http://localhost:8000/mcp

# MCP Server Key (required for Azure Functions, optional for local)
# Get from: az functionapp keys list --name <app> --query "systemKeys.mcp_extension"
MCP_SERVER_KEY=

# ============================================================================
# Optional: Override Azure credentials
# Leave empty to use DefaultAzureCredential
# ============================================================================
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
